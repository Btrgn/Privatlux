{
  "name": "privatlux-website",
  "version": "1.0.0",
  "description": "PrivatLux - Premium Escort and Massage Services Platform",
  "main": "backend/app.js",
  "scripts": {
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "cd backend && nodemon app.js",
    "frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd backend && node app.js",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install"
  },
  "keywords": ["escort", "massage", "privatlux", "nodejs", "nextjs"],
  "author": "PrivatLux Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}